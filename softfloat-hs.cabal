name:                softfloat-hs
version:             0.1.0
synopsis:            Haskell bindings for SoftFloat
description:
  Provides a pure functional interface to John Hauser's SoftFloat, an implementation
  of IEEE floating point in the C programming language.
homepage:            https://github.com/GaloisInc/softfloat-hs
license:             BSD3
license-file:        LICENSE
author:              Ben Selfridge
maintainer:          benselfridge@galois.com
copyright:           March 2018
category:            Math
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md

library
  exposed-modules:     SoftFloat
                     , SoftFloat.Internal
  hs-source-dirs:      src
  include-dirs:        include
  c-sources:           csrc/softfloat_wrappers.c
  ghc-options:         -Wall
  extra-libraries:     softfloat
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5

executable fpgen-test
  hs-source-dirs:      test
  main-is:             Fpgen.hs
  ghc-options:         -threaded -Wall
  default-language:    Haskell2010
  build-depends:       base,
                       softfloat-hs,
                       parsec,
                       directory,
                       process

executable softfloat-test
  hs-source-dirs:      test
  main-is:             Testfloat.hs
  ghc-options:         -threaded -Wall
  default-language:    Haskell2010
  build-depends:       base,
                       softfloat-hs,
                       split,
                       process
